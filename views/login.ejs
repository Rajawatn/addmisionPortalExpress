<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- <title>Login</title> -->

    <!-- CSS Link -->
    <link rel="stylesheet" href="/style.css">

    <!-- Bootstrap Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body>

    <!-- Login -->
    <section id="login" class="my-5">
        <div class="container">
            <div class="row">
                <!-- Column-1 -->
                <div class="col-lg-6">
                    <img class="w-100" src="/Images/CollegeStudentsImage-1.jpeg" alt="College Students Image-1"
                        height="100%">
                </div>
                <!-- End Column-1 -->

                <!-- Column-2 -->
                <div class="col-lg-6 bglogin p-4">
                    <form action="/vlogin" method="post">
                        <!-- logo -->
                        <center>
                            <img class="mb-4 rounded-circle" src="/Images/logo.jpeg" alt="logo" width="20%"
                                height="20%">
                        </center>

                        <!-- Heading (Login) -->
                        <h1 class="mb-5 text-center">Login</h1>
                        <% if(message.length> 0) { %>
                            <div class="alert alert-success">
                                <%= message %>
                            </div>
                            <% } %>
                                <% if(error.length> 0) { %>
                                    <div class="alert alert-danger">
                                        <%= error %>
                                    </div>
                                    <% } %>
                                        <!-- Email -->
                                        <div class="row mb-3">
                                            <div
                                                class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2">
                                                Email
                                            </div>
                                            <div class="col-lg-10">
                                                <input class="form-control" type="email" placeholder="name@example.com"
                                                    name="e" required>
                                            </div>
                                        </div>

                                        <!-- Password -->
                                        <div class="row mb-5">
                                            <div
                                                class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2">
                                                Password</div>
                                            <div class="col-lg-10">
                                                <input class="form-control" type="password" name="p" required>
                                            </div>
                                        </div>

                                        <!-- Button (Login) -->
                                        <center>
                                            <button type="submit" class="btn btn-primary mb-5 btn-lg">Login</button>
                                        </center>

                                        <!-- Register Now -->
                                        <center>
                                            <p class="text-uppercase fw-light">Don't have an account? &nbsp;<a
                                                    href="./ragistration">Register Now</a></p>
                                            <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                                data-bs-target="#exampleModal">
                                                forgot password
                                            </button>
                                        </center>
                    </form>
                </div>
                <!-- End Column-2 -->
            </div>
        </div>







        <!-- Button trigger modal -->


        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">forgot mail</h5>
                        <button type="btn btn-info" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="col-lg-6 bglogin p-4">
                            <form action="/forgot" method="post">
                                <!-- logo -->
                                <center>
                                    <img class="mb-4 rounded-circle" src="/Images/logo.jpeg" alt="logo" width="20%"
                                        height="20%">
                                </center>

                                <!-- Heading (Login) -->
                                <h1 class="mb-5 text-center">Login</h1>
                                <% if(message.length> 0) { %>
                                    <div class="alert alert-success">
                                        <%= message %>
                                    </div>
                                    <% } %>
                                        <% if(error.length> 0) { %>
                                            <div class="alert alert-danger">
                                                <%= error %>
                                            </div>
                                            <% } %>
                                                <!-- Email -->
                                                <div class="row mb-3">
                                                    <div
                                                        class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2">
                                                        Email
                                                    </div>
                                                    <div class="col-lg-10">
                                                        <input class="form-control" type="email"
                                                            placeholder="name@example.com" name="e" required>
                                                    </div>
                                                </div>




                                                <center>
                                                    <button type="submit"
                                                        class="btn btn-primary mb-5 btn-lg">send</button>
                                                </center>

                                                <!-- Register Now -->

                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>










    </section>
    <!-- End Login -->

    <!-- Java Script Link -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>